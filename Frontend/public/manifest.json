{
  "manifest_version": 3,
  "name": "SSAFY Search Engine",
  "description": "AI 검색 요약 익스텐션",
  "version": "1.0.0",
  "action": {
    "default_popup": "index.html"
  },
  "background": {
    "service_worker": "background/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "content/content-script.js",
        "content/capture.js",
        "content/ocr-response.js",
        "library/html2canvas.min.js"
      ],
      "css": ["content/content.css"]
    }
  ],
  "host_permissions": ["<all_urls>"],
  "permissions": ["identity", "activeTab", "tabs"],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "key": "",
  "oauth2": {
    "client_id": "565410954604-7tm35fhapudpfhkoh4mk1l2bok28altu.apps.googleusercontent.com",
    "scopes": ["https://www.googleapis.com/auth/contacts.readonly"]
  }
}
